{
  "name": "conversational-design-starter",
  "version": "1.0.0",
  "description": "A simple tool for designing AI conversational assistants",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [
    "ai",
    "conversational-design",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.20.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

